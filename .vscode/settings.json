{
  "editor.formatOnSave": true,
  "cSpell.ignoreWords": [
    "datepicker",
    "Tabbar",
    "addwallet",
    "nprogress",
    "hookform",
    "zustand",
    "tailwindcss"
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.fixAll.eslint": true
  },
  "javascript.suggestionActions.enabled": false
}
